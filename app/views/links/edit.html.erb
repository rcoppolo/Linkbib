<h1>Edit your link</h1>

<%= form_for @link do |f| %>
	<% @link.errors.full_messages.each do |error| %>
		<p class='errors'><%= error %></p>
	<% end %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<%= f.submit "Edit url!"%>

<% end %>
