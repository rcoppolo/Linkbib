<!DOCTYPE html>
<html>
<head>
  <title>Linkbib</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="container">

	<% if user_signed_in? %>
		<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
	<% end %>
	
	<% flash.each do |key, value| %>
	  <div class="alert alert-<%= key %>"><%= value %></div>
	<% end %>
	
	
	<%= yield %>
</div>
</body>
</html>