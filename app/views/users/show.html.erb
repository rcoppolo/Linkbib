<h1><%= @user.email %>'s profile:</h1>

<p><%= link_to "Add a link.", new_link_path %></p>

<div class="links">
	<% @user.links.each do |link| %>
		<div class="link">
			<div class="main">
				<h3><span class="link_fav"><%= image_tag(link.favicon_url, :class=>"bordered-fav") if link.favicon_url %></span> <span class="link_title"><%= link_to (link.title[0..65] + 'â€¦'), link.url %></span></h3>
				<div class="description"><p><%= link.description %><span class="dots desc"> ...</span></p></div>
				<div class="info">
					<h5><%= link_to link.display_url, link.url %><span class="pipe">|</span><span class="author">James Dean</span></h5>
					
					<h6><%= time_ago_in_words(link.created_at) + " ago"%></h6>
				</div>
			</div>
			<div class="side">

							<%= link_to edit_link_path(link), class: "btn btn-primary" do %>
								<i class='icon-pencil icon-white'></i> Edit
							<% end %>
							<%= link_to link_path(link), :method=>:delete, :confirm => "Are you sure?",  class: "btn btn-danger" do %>
								<i class='icon-trash icon-white'></i> Delete
							<% end %>

						</div>
		</div>
	<% end %>
</div>